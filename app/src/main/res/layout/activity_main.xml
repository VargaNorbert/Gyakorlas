<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/mondat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="VALAMI SZÖVEG, BÁRMI"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/nagy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mondat"
        android:layout_centerInParent="true"
        android:text="NAGY BETŰS SZÖVEG"/>

    <Button android:id="@+id/kicsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/nagy"
        android:text="KIS BETŰS SZÖVEG"/>

    <Button android:id="@+id/szin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/kicsi"
        android:text="RANDOM SZÍN"/>


    <TextView
        android:id="@+id/szoveg"
        android:layout_width="match_parent"
        android:layout_below="@+id/szin"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textAlignment="center"/>

</RelativeLayout>